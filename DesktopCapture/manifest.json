{
    "manifest_version": 2,
    "name": "影片截圖範例",
    "description": "按一下開始錄影，再按一下儲存",
    "version": "2.0",
    "browser_action": {
        "default_title": "按一下開始錄影，再按一下儲存",
        "default_icon": "play_icon.png"
    },
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "permissions": [
        "desktopCapture",
        "tabs"
    ]
}
