{
	"manifest_version" : 2,
	"name" : "鐵人賽-Browser-Action",
	"description" : "就來作作第一個Browser-Action",
	"version" : "1.2",
	"browser_action" : {
		"default_title" : "羅拉拉的第一個擴充套件",
		"default_icon" : "icon.png",
		"default_popup": "popup.html"		
	},
	"content_scripts" : [
		{
			"matches" : ["*://*/*"],
			"js" : ["content.js"],
			"css" : ["content.css"]
		}
	],
	"background" : {
		"scripts" : ["event.js"],
		"persistent" : false
	},
	"permissions" : ["activeTab"]
}